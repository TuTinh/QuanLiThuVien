
@using QuanLiThuVien.Models.Entites
@{ 
    var theLoais = (List<TheLoai>)ViewBag.ListTheLoai;
    var nhaXBs = (List<NhaXuatBan>)ViewBag.ListNXB;
    var tacGias = (List<TacGia>)ViewBag.ListTacGia;
}

<div class="main-menu-area hidden-sm hidden-xs sticky-header-1" id="header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="menu-area">
                    <nav>
                        <ul>
                            <li class="active"><a href="#">Trang chủ</a></li>
                            <li>
                                <a href="#">Giới thiệu</a>
                            </li>
                            <li>
                                <a href="#">Sách<i class="fa fa-angle-down"></i></a>
                                <div class="mega-menu mega-menu-2">
                                    <span>
                                        <a href="#" class="title">Thể loại</a>
                                        @foreach (var item in theLoais)
                                        {
                                            <a href="#">@item.Tentheloai</a>
                                        }
                                        <a href="#">...</a>
                                    </span>
                                    <span>
                                        <a href="#" class="title">Tác giả</a>
                                        @foreach (var item in tacGias)
                                        {
                                            <a href="#">@item.Tentacgia</a>
                                        }
                                        <a href="shop.html">...</a>
                                    </span>
                                    <span>
                                        <a href="#" class="title">Nhà xuất bản</a>
                                        @foreach (var item in nhaXBs)
                                        {
                                            <a href="#">@item.TenNXB</a>
                                        }
                                        <a href="shop.html">...</a>
                                    </span>
                                </div>
                            </li>
                            <li>
                                <a href="#">Quà tặng</a>
                            </li>
                            <li>
                                <a href="#">Liên hệ</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="safe-area">
                    <a href="#"><i class="fa fa-archive"></i>Giỏ mượn</a>
                </div>

            </div>
        </div>
    </div>
</div>

